/* ==========================================================================
   Chasing Chapters - Payload CMS Admin Customizations
   Professional admin interface for book review platform
   ========================================================================== */

/* ==========================================================================
   CSS VARIABLES - Color System & Design Tokens
   ========================================================================== */

:root {
  /* Primary Color Palette */
  --primary-blue: #3B82F6;
  --primary-blue-light: #60A5FA;
  --primary-blue-dark: #1D4ED8;
  --primary-blue-hover: #2563EB;

  /* Secondary Colors */
  --gray-50: #F9FAFB;
  --gray-100: #F3F4F6;
  --gray-200: #E5E7EB;
  --gray-300: #D1D5DB;
  --gray-400: #9CA3AF;
  --gray-500: #6B7280;
  --gray-600: #4B5563;
  --gray-700: #374151;
  --gray-800: #1F2937;
  --gray-900: #111827;

  /* Status Colors */
  --success-green: #10B981;
  --success-green-light: #34D399;
  --warning-orange: #F59E0B;
  --warning-orange-light: #FBBF24;
  --error-red: #EF4444;
  --error-red-light: #F87171;

  /* Tag Color Defaults (will be overridden dynamically) */
  --tag-color-primary: #3B82F6;
  --tag-color-secondary: #10B981;
  --tag-color-accent: #F59E0B;

  /* Typography */
  --font-size-xs: 0.75rem;
  --font-size-sm: 0.875rem;
  --font-size-base: 1rem;
  --font-size-lg: 1.125rem;
  --font-size-xl: 1.25rem;
  --font-size-2xl: 1.5rem;

  /* Spacing */
  --space-1: 0.25rem;
  --space-2: 0.5rem;
  --space-3: 0.75rem;
  --space-4: 1rem;
  --space-6: 1.5rem;
  --space-8: 2rem;
  --space-12: 3rem;

  /* Border Radius */
  --radius-sm: 0.25rem;
  --radius-md: 0.375rem;
  --radius-lg: 0.5rem;
  --radius-xl: 0.75rem;

  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

/* ==========================================================================
   GLOBAL ADMIN INTERFACE ENHANCEMENTS
   ========================================================================== */

/* Admin Wrapper Improvements */
.payload-admin {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  line-height: 1.5;
  color: var(--gray-800);
  
  /* Smooth transitions for all interactive elements */
  * {
    transition: all 0.2s ease-in-out;
  }
}

/* Enhanced Navigation */
.nav {
  background: linear-gradient(180deg, #1F2937 0%, #111827 100%);
  border-right: 1px solid var(--gray-700);
  
  .nav__content {
    padding: var(--space-6) var(--space-4);
  }
  
  .nav__header {
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--gray-700);
    
    h2 {
      color: #fff;
      font-size: var(--font-size-xl);
      font-weight: 600;
      text-align: center;
      margin: 0;
      
      &::after {
        content: '=Ú';
        display: block;
        font-size: var(--font-size-sm);
        margin-top: var(--space-2);
        opacity: 0.8;
      }
    }
  }
  
  .nav__group {
    margin-bottom: var(--space-6);
    
    .nav__group-label {
      color: var(--gray-400);
      font-size: var(--font-size-xs);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: var(--space-3);
      padding: 0 var(--space-3);
    }
    
    .nav__link {
      color: var(--gray-300);
      text-decoration: none;
      padding: var(--space-3) var(--space-3);
      border-radius: var(--radius-md);
      display: flex;
      align-items: center;
      margin-bottom: var(--space-1);
      font-size: var(--font-size-sm);
      
      &:hover {
        background: rgba(59, 130, 246, 0.1);
        color: var(--primary-blue-light);
        transform: translateX(2px);
      }
      
      &.nav__link--active {
        background: var(--primary-blue);
        color: white;
        font-weight: 500;
        box-shadow: var(--shadow-md);
      }
    }
  }
}

/* Main Content Area */
.template-default__content,
.template-list__content,
.template-edit__content {
  padding: var(--space-8);
  background: var(--gray-50);
  min-height: 100vh;
}

/* Page Headers */
.page-header {
  margin-bottom: var(--space-8);
  
  h1 {
    font-size: var(--font-size-2xl);
    font-weight: 700;
    color: var(--gray-900);
    margin: 0 0 var(--space-2) 0;
  }
  
  .page-description {
    color: var(--gray-600);
    font-size: var(--font-size-base);
    margin: 0;
  }
}

/* ==========================================================================
   TAG COLOR SYSTEM
   ========================================================================== */

/* Tag Color Indicators in List Views */
.cell-color,
.tag-color-indicator {
  position: relative;
  
  &::before {
    content: '';
    display: inline-block;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    margin-right: var(--space-2);
    vertical-align: middle;
    border: 2px solid white;
    box-shadow: var(--shadow-sm);
    background: var(--tag-color-primary, #3B82F6);
  }
  
  &[data-color]::before {
    background: attr(data-color);
  }
}

/* Tag Selection Interface */
.field-type-relationship {
  .relationship-field {
    .relationship-field__item {
      position: relative;
      padding-left: var(--space-6);
      
      &::before {
        content: '';
        position: absolute;
        left: var(--space-2);
        top: 50%;
        transform: translateY(-50%);
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: var(--tag-color-primary);
        border: 1px solid var(--gray-300);
      }
      
      &[data-tag-color]::before {
        background: attr(data-tag-color);
      }
    }
  }
}

/* Tag Management Form */
.collection-tags {
  .field-type-text[data-field-name="color"] {
    .field-label {
      display: flex;
      align-items: center;
      
      &::before {
        content: '';
        width: 20px;
        height: 20px;
        border-radius: var(--radius-sm);
        margin-right: var(--space-2);
        border: 2px solid var(--gray-300);
        background: var(--primary-blue);
      }
    }
    
    input[type="text"] {
      font-family: 'Courier New', monospace;
      font-size: var(--font-size-sm);
      text-transform: uppercase;
      padding-left: var(--space-12);
      background-image: linear-gradient(45deg, var(--gray-100) 25%, transparent 25%), 
                        linear-gradient(-45deg, var(--gray-100) 25%, transparent 25%), 
                        linear-gradient(45deg, transparent 75%, var(--gray-100) 75%), 
                        linear-gradient(-45deg, transparent 75%, var(--gray-100) 75%);
      background-size: 8px 8px;
      background-position: 0 0, 0 4px, 4px -4px, -4px 0px;
      
      &::before {
        content: '';
        position: absolute;
        left: var(--space-2);
        top: 50%;
        transform: translateY(-50%);
        width: 24px;
        height: 24px;
        border-radius: var(--radius-sm);
        border: 2px solid var(--gray-300);
        background: var(--value, var(--primary-blue));
        z-index: 1;
      }
    }
  }
}

/* Color Preview in Tag Forms */
.color-preview {
  position: absolute;
  left: var(--space-2);
  top: 50%;
  transform: translateY(-50%);
  width: 24px;
  height: 24px;
  border-radius: var(--radius-sm);
  border: 2px solid var(--gray-300);
  z-index: 1;
  pointer-events: none;
}

/* ==========================================================================
   REVIEWS FORM ENHANCEMENTS
   ========================================================================== */

/* Reviews Collection Specific Styling */
.collection-reviews {
  
  /* Enhanced Form Layout */
  .form-field {
    margin-bottom: var(--space-6);
    
    .field-label {
      font-weight: 600;
      color: var(--gray-700);
      margin-bottom: var(--space-2);
      font-size: var(--font-size-sm);
      text-transform: uppercase;
      letter-spacing: 0.025em;
    }
    
    .field-description {
      color: var(--gray-500);
      font-size: var(--font-size-xs);
      margin-top: var(--space-1);
      font-style: italic;
    }
  }
  
  /* Collapsible Section Enhancements */
  .collapsible {
    border: 1px solid var(--gray-200);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-6);
    background: white;
    box-shadow: var(--shadow-sm);
    overflow: hidden;
    
    .collapsible__header {
      background: linear-gradient(135deg, var(--gray-50) 0%, white 100%);
      border-bottom: 1px solid var(--gray-200);
      padding: var(--space-4) var(--space-6);
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: space-between;
      font-weight: 600;
      color: var(--gray-800);
      
      &:hover {
        background: linear-gradient(135deg, var(--gray-100) 0%, var(--gray-50) 100%);
      }
      
      .collapsible__indicator {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background: var(--primary-blue);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: var(--font-size-xs);
        font-weight: bold;
        transition: transform 0.3s ease;
      }
      
      &[aria-expanded="true"] .collapsible__indicator {
        transform: rotate(180deg);
      }
    }
    
    .collapsible__content {
      padding: var(--space-6);
      background: white;
    }
    
    /* Section-specific styling */
    &.reading-progress {
      .collapsible__header {
        background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
        border-bottom-color: #F59E0B;
        
        &::before {
          content: '=Ö';
          margin-right: var(--space-2);
        }
      }
    }
    
    &.book-metadata {
      .collapsible__header {
        background: linear-gradient(135deg, #DBEAFE 0%, #BFDBFE 100%);
        border-bottom-color: var(--primary-blue);
        
        &::before {
          content: '=Ú';
          margin-right: var(--space-2);
        }
      }
    }
    
    &.media-tags {
      .collapsible__header {
        background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
        border-bottom-color: var(--success-green);
        
        &::before {
          content: '<÷';
          margin-right: var(--space-2);
        }
      }
    }
  }
  
  /* Reading Status Visual Indicators */
  .field-type-select[data-field-name="readingStatus"] {
    .select-field {
      position: relative;
      
      &::before {
        content: '';
        position: absolute;
        left: var(--space-3);
        top: 50%;
        transform: translateY(-50%);
        width: 10px;
        height: 10px;
        border-radius: 50%;
        z-index: 1;
        pointer-events: none;
      }
      
      &[data-value="want-to-read"]::before {
        background: var(--gray-400);
      }
      
      &[data-value="currently-reading"]::before {
        background: var(--warning-orange);
        animation: pulse 2s infinite;
      }
      
      &[data-value="finished"]::before {
        background: var(--success-green);
      }
      
      select {
        padding-left: var(--space-8);
      }
    }
  }
  
  /* Rating Field Enhancement */
  .field-type-number[data-field-name="rating"] {
    .number-field-wrapper {
      position: relative;
      
      &::after {
        content: 'P';
        position: absolute;
        right: var(--space-3);
        top: 50%;
        transform: translateY(-50%);
        pointer-events: none;
        opacity: 0.6;
      }
    }
    
    input[type="number"] {
      padding-right: var(--space-8);
      
      &:focus {
        border-color: var(--warning-orange);
        box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.1);
      }
    }
  }
  
  /* Rich Text Editor Enhancements */
  .field-type-richText {
    .rich-text-editor {
      border-radius: var(--radius-lg);
      overflow: hidden;
      box-shadow: var(--shadow-md);
      
      .toolbar {
        background: var(--gray-100);
        border-bottom: 1px solid var(--gray-200);
        padding: var(--space-3);
        
        button {
          border-radius: var(--radius-sm);
          margin-right: var(--space-1);
          
          &:hover {
            background: var(--gray-200);
          }
          
          &.active {
            background: var(--primary-blue);
            color: white;
          }
        }
      }
      
      .editor-content {
        padding: var(--space-6);
        min-height: 300px;
        font-size: var(--font-size-base);
        line-height: 1.7;
        
        h2, h3, h4 {
          color: var(--gray-800);
          margin-top: var(--space-6);
          margin-bottom: var(--space-3);
        }
        
        p {
          margin-bottom: var(--space-4);
        }
        
        blockquote {
          border-left: 4px solid var(--primary-blue);
          margin: var(--space-6) 0;
          padding: var(--space-4) var(--space-6);
          background: var(--gray-50);
          border-radius: 0 var(--radius-md) var(--radius-md) 0;
          font-style: italic;
        }
      }
    }
  }
}

/* ==========================================================================
   MEDIA UPLOAD INTERFACE ENHANCEMENTS
   ========================================================================== */

.collection-media {
  
  /* Enhanced Upload Area */
  .upload-field {
    border: 2px dashed var(--gray-300);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    text-align: center;
    background: linear-gradient(135deg, var(--gray-50) 0%, white 100%);
    transition: all 0.3s ease;
    
    &.dragover {
      border-color: var(--primary-blue);
      background: linear-gradient(135deg, #EBF8FF 0%, #DBEAFE 100%);
      transform: scale(1.02);
    }
    
    .upload-prompt {
      font-size: var(--font-size-lg);
      color: var(--gray-600);
      margin-bottom: var(--space-4);
      
      &::before {
        content: '=Á';
        display: block;
        font-size: 3rem;
        margin-bottom: var(--space-4);
      }
    }
    
    .upload-button {
      background: var(--primary-blue);
      color: white;
      border: none;
      padding: var(--space-3) var(--space-6);
      border-radius: var(--radius-lg);
      font-weight: 600;
      cursor: pointer;
      
      &:hover {
        background: var(--primary-blue-hover);
        transform: translateY(-1px);
        box-shadow: var(--shadow-md);
      }
    }
  }
  
  /* Image Preview Enhancements */
  .media-preview {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    background: white;
    
    .preview-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-bottom: 1px solid var(--gray-200);
    }
    
    .preview-details {
      padding: var(--space-4);
      
      .filename {
        font-weight: 600;
        color: var(--gray-800);
        margin-bottom: var(--space-2);
      }
      
      .file-info {
        font-size: var(--font-size-sm);
        color: var(--gray-500);
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-2);
      }
    }
  }
  
  /* Usage Context Indicators */
  .field-type-select[data-field-name="usageContext"] {
    .select-option {
      padding-left: var(--space-8);
      position: relative;
      
      &::before {
        content: '';
        position: absolute;
        left: var(--space-3);
        top: 50%;
        transform: translateY(-50%);
        font-size: var(--font-size-lg);
      }
      
      &[data-value="book-cover"]::before {
        content: '=Ö';
      }
      
      &[data-value="avatar"]::before {
        content: '=d';
      }
      
      &[data-value="content"]::before {
        content: '=¼';
      }
      
      &[data-value="general"]::before {
        content: '=Ä';
      }
    }
  }
  
  /* Image Size Information Display */
  .image-sizes-info {
    background: var(--gray-50);
    border-radius: var(--radius-md);
    padding: var(--space-4);
    margin-top: var(--space-4);
    
    .size-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: var(--space-3);
      
      .size-item {
        text-align: center;
        padding: var(--space-2);
        background: white;
        border-radius: var(--radius-sm);
        border: 1px solid var(--gray-200);
        
        .size-name {
          font-weight: 600;
          font-size: var(--font-size-xs);
          color: var(--gray-700);
          text-transform: uppercase;
        }
        
        .size-dimensions {
          font-size: var(--font-size-xs);
          color: var(--gray-500);
        }
      }
    }
  }
}

/* ==========================================================================
   USER ROLE INDICATORS
   ========================================================================== */

.collection-users {
  
  /* Role Badges in List View */
  .cell-role {
    .role-badge {
      display: inline-flex;
      align-items: center;
      padding: var(--space-1) var(--space-3);
      border-radius: var(--radius-lg);
      font-size: var(--font-size-xs);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      
      &.role-admin {
        background: linear-gradient(135deg, #FEE2E2 0%, #FECACA 100%);
        color: #B91C1C;
        border: 1px solid #F87171;
        
        &::before {
          content: '=Q';
          margin-right: var(--space-1);
        }
      }
      
      &.role-author {
        background: linear-gradient(135deg, #DBEAFE 0%, #BFDBFE 100%);
        color: #1D4ED8;
        border: 1px solid #60A5FA;
        
        &::before {
          content: '';
          margin-right: var(--space-1);
        }
      }
    }
  }
  
  /* User Profile Enhancements */
  .user-profile-section {
    background: white;
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    box-shadow: var(--shadow-md);
    margin-bottom: var(--space-6);
    
    .profile-header {
      display: flex;
      align-items: center;
      margin-bottom: var(--space-4);
      
      .avatar-placeholder {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-light) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: var(--font-size-xl);
        font-weight: 600;
        margin-right: var(--space-4);
      }
      
      .profile-info {
        flex: 1;
        
        .display-name {
          font-size: var(--font-size-lg);
          font-weight: 600;
          color: var(--gray-800);
          margin-bottom: var(--space-1);
        }
        
        .user-email {
          color: var(--gray-500);
          font-size: var(--font-size-sm);
        }
      }
    }
  }
}

/* ==========================================================================
   GENERAL ADMIN INTERFACE POLISH
   ========================================================================== */

/* Enhanced Form Fields */
.form-field {
  margin-bottom: var(--space-6);
  
  .field-label {
    font-weight: 600;
    color: var(--gray-700);
    margin-bottom: var(--space-2);
    display: flex;
    align-items: center;
  }
  
  .field-description {
    color: var(--gray-500);
    font-size: var(--font-size-sm);
    margin-top: var(--space-2);
    line-height: 1.4;
  }
  
  /* Input Field Enhancements */
  input[type="text"],
  input[type="email"],
  input[type="number"],
  input[type="date"],
  select,
  textarea {
    border: 1px solid var(--gray-300);
    border-radius: var(--radius-md);
    padding: var(--space-3) var(--space-4);
    font-size: var(--font-size-base);
    transition: all 0.2s ease;
    width: 100%;
    background: white;
    
    &:focus {
      outline: none;
      border-color: var(--primary-blue);
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }
    
    &:hover {
      border-color: var(--gray-400);
    }
    
    &::placeholder {
      color: var(--gray-400);
    }
  }
  
  /* Textarea Specific */
  textarea {
    resize: vertical;
    min-height: 100px;
    line-height: 1.5;
  }
  
  /* Select Field Enhancements */
  select {
    cursor: pointer;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
    background-position: right var(--space-3) center;
    background-repeat: no-repeat;
    background-size: 16px 12px;
    padding-right: var(--space-8);
  }
}

/* Button Enhancements */
.btn {
  border-radius: var(--radius-md);
  font-weight: 600;
  padding: var(--space-3) var(--space-6);
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  text-decoration: none;
  
  &.btn-primary {
    background: var(--primary-blue);
    color: white;
    
    &:hover {
      background: var(--primary-blue-hover);
      transform: translateY(-1px);
      box-shadow: var(--shadow-md);
    }
  }
  
  &.btn-secondary {
    background: var(--gray-200);
    color: var(--gray-700);
    
    &:hover {
      background: var(--gray-300);
    }
  }
  
  &.btn-success {
    background: var(--success-green);
    color: white;
    
    &:hover {
      background: var(--success-green-light);
      transform: translateY(-1px);
      box-shadow: var(--shadow-md);
    }
  }
  
  &.btn-danger {
    background: var(--error-red);
    color: white;
    
    &:hover {
      background: var(--error-red-light);
      transform: translateY(-1px);
      box-shadow: var(--shadow-md);
    }
  }
}

/* Loading States */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  
  .loading-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid var(--gray-200);
    border-top: 3px solid var(--primary-blue);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
}

/* Table Enhancements */
.table {
  background: white;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  
  thead {
    background: var(--gray-50);
    
    th {
      padding: var(--space-4) var(--space-6);
      font-weight: 600;
      color: var(--gray-700);
      text-align: left;
      border-bottom: 1px solid var(--gray-200);
      font-size: var(--font-size-sm);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
  }
  
  tbody {
    tr {
      border-bottom: 1px solid var(--gray-100);
      transition: background-color 0.2s ease;
      
      &:hover {
        background: var(--gray-50);
      }
      
      td {
        padding: var(--space-4) var(--space-6);
        color: var(--gray-800);
        vertical-align: middle;
      }
    }
  }
}

/* Pagination Enhancements */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: var(--space-2);
  margin-top: var(--space-8);
  
  .pagination-item {
    padding: var(--space-2) var(--space-3);
    border: 1px solid var(--gray-300);
    border-radius: var(--radius-md);
    background: white;
    color: var(--gray-600);
    text-decoration: none;
    transition: all 0.2s ease;
    
    &:hover {
      background: var(--gray-50);
      border-color: var(--gray-400);
    }
    
    &.active {
      background: var(--primary-blue);
      border-color: var(--primary-blue);
      color: white;
    }
  }
}

/* ==========================================================================
   ANIMATIONS & TRANSITIONS
   ========================================================================== */

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Apply slide-in animation to form sections */
.form-section {
  animation: slideIn 0.5s ease-out;
}

/* ==========================================================================
   RESPONSIVE DESIGN - MOBILE OPTIMIZATION
   ========================================================================== */

@media (max-width: 768px) {
  
  /* Mobile Navigation */
  .nav {
    position: fixed;
    top: 0;
    left: -280px;
    width: 280px;
    height: 100vh;
    z-index: 1000;
    transition: left 0.3s ease;
    
    &.nav-open {
      left: 0;
    }
    
    .nav__content {
      padding: var(--space-4);
    }
    
    .nav__header h2 {
      font-size: var(--font-size-lg);
    }
  }
  
  /* Mobile Content */
  .template-default__content,
  .template-list__content,
  .template-edit__content {
    padding: var(--space-4);
    margin-left: 0;
  }
  
  /* Mobile Form Adjustments */
  .form-field {
    margin-bottom: var(--space-4);
  }
  
  .collapsible {
    .collapsible__header {
      padding: var(--space-3) var(--space-4);
      font-size: var(--font-size-sm);
    }
    
    .collapsible__content {
      padding: var(--space-4);
    }
  }
  
  /* Mobile Table */
  .table {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
    
    thead, tbody, th, td, tr {
      display: block;
    }
    
    thead tr {
      position: absolute;
      top: -9999px;
      left: -9999px;
    }
    
    tbody tr {
      border: 1px solid var(--gray-200);
      border-radius: var(--radius-md);
      margin-bottom: var(--space-4);
      padding: var(--space-4);
      background: white;
    }
    
    td {
      border: none;
      position: relative;
      padding-left: 30%;
      
      &::before {
        content: attr(data-label);
        position: absolute;
        left: var(--space-2);
        width: 25%;
        padding-right: var(--space-2);
        white-space: nowrap;
        font-weight: 600;
        color: var(--gray-600);
        font-size: var(--font-size-xs);
        text-transform: uppercase;
      }
    }
  }
  
  /* Mobile Buttons */
  .btn {
    width: 100%;
    margin-bottom: var(--space-2);
    text-align: center;
  }
  
  /* Mobile Upload */
  .upload-field {
    padding: var(--space-4);
    
    .upload-prompt {
      font-size: var(--font-size-base);
      
      &::before {
        font-size: 2rem;
        margin-bottom: var(--space-2);
      }
    }
  }
  
  /* Mobile Media Preview */
  .media-preview {
    .preview-details .file-info {
      grid-template-columns: 1fr;
    }
  }
  
  /* Mobile User Profile */
  .user-profile-section .profile-header {
    flex-direction: column;
    text-align: center;
    
    .avatar-placeholder {
      margin-right: 0;
      margin-bottom: var(--space-4);
    }
  }
}

/* ==========================================================================
   TABLET OPTIMIZATION
   ========================================================================== */

@media (min-width: 769px) and (max-width: 1024px) {
  
  .nav {
    width: 240px;
  }
  
  .template-default__content,
  .template-list__content,
  .template-edit__content {
    margin-left: 240px;
    padding: var(--space-6);
  }
  
  .table {
    font-size: var(--font-size-sm);
    
    th, td {
      padding: var(--space-3) var(--space-4);
    }
  }
}

/* ==========================================================================
   PRINT STYLES
   ========================================================================== */

@media print {
  .nav,
  .btn,
  .pagination {
    display: none !important;
  }
  
  .template-default__content,
  .template-list__content,
  .template-edit__content {
    margin: 0;
    padding: 0;
    background: white;
  }
  
  .collapsible__content {
    display: block !important;
  }
  
  * {
    color: black !important;
    background: white !important;
  }
}

/* ==========================================================================
   ACCESSIBILITY ENHANCEMENTS
   ========================================================================== */

/* Focus Management */
*:focus {
  outline: 2px solid var(--primary-blue);
  outline-offset: 2px;
}

/* Screen Reader Support */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* High Contrast Mode Support */
@media (prefers-contrast: high) {
  :root {
    --gray-300: #000000;
    --gray-600: #000000;
    --primary-blue: #0000FF;
  }
  
  .btn {
    border: 2px solid currentColor;
  }
}

/* Reduced Motion Support */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* ==========================================================================
   END OF CUSTOM STYLES
   ========================================================================== */